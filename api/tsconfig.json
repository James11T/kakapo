{
  "compilerOptions": {
    "lib": ["ES2022"],
    "strict": true,
    "target": "ES2022",
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
