{
  "compilerOptions": {
    "lib": ["ES2022"],
    "strict": true,
    "target": "ES2022",
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
