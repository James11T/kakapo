{
  "compilerOptions": {
    "lib": ["ES6"],
    "strict": true,
    "baseUrl": ".",
    "target": "es2020",
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
